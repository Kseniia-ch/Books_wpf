<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Books.Dictionaries">


    <Style x:Key="MenuBg">
        <Setter Property="Control.Background" Value="#d3ff87"/>
        <Setter Property="Control.Foreground" Value="Black"/>
    </Style>

    <Style x:Key="MenuIcon">
        <Setter Property="Control.Foreground" Value="ForestGreen" />
    </Style>

    <Style x:Key="MainColorBg">
        <Setter Property="Control.Background" Value="#024006"/>
        <Setter Property="Control.Foreground" Value="White"/>
    </Style>

    <Style x:Key="Button" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedLightButton}">
        <Setter Property="Control.Background" Value="#d3ff87"/>
    </Style>

    <Style x:Key="ButtonAdd" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedDarkButton}"/>

</ResourceDictionary>